{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "rootDir": "./",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "typeRoots": ["./types", "./node_modules/@types"]
  },
  "include": [
    "./contracts/**/*.sol",
    "./scripts/**/*.ts",
    "./test/**/*.ts",
    "./hardhat.config.ts",
    "./types/**/*.d.ts"
  ],
  "exclude": ["node_modules", "dist", "cache", "artifacts", "typechain-types"]
}
