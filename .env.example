# Environment Variables Template

# Copy this file to .env and fill in your values
# DO NOT commit .env file to git

# ===========================================
# NETWORK CONFIGURATION
# ===========================================

# Base Sepolia Testnet
BASE_SEPOLIA_RPC=https://sepolia.base.org
NEXT_PUBLIC_BASE_SEPOLIA_RPC=https://sepolia.base.org

# Base Mainnet
BASE_MAINNET_RPC=https://mainnet.base.org
NEXT_PUBLIC_BASE_MAINNET_RPC=https://mainnet.base.org

# ===========================================
# WALLET & DEPLOYMENT
# ===========================================

# Private key for contract deployment (without 0x prefix)
# ⚠️ NEVER commit this to git
PRIVATE_KEY=your_private_key_here

# ===========================================
# BLOCKCHAIN EXPLORERS
# ===========================================

# BaseScan API Key (for contract verification)
# Get from: https://basescan.org/myapikey
BASESCAN_API_KEY=your_basescan_api_key_here

# Etherscan API Key (optional, for Ethereum mainnet)
ETHERSCAN_API_KEY=your_etherscan_api_key_here

# ===========================================
# CONTRACT ADDRESSES (After Deployment)
# ===========================================

# Base Sepolia Testnet Addresses
NEXT_PUBLIC_AVENTURER_NFT_ADDRESS_SEPOLIA=0x20b0BD45Ee15Ad3512749767859E1a2e94d21EB9
NEXT_PUBLIC_DUNGEON_GAME_ADDRESS_SEPOLIA=0xFF7578D27B9b4F03840B3F826944cE8C7A578564
NEXT_PUBLIC_FEE_DISTRIBUTOR_ADDRESS_SEPOLIA=0x0FeCBEf041A38948b2353d12380dB60F818D2C1b
NEXT_PUBLIC_REWARDS_POOL_ADDRESS_SEPOLIA=0x4a3992BD999565c99DfD3479Ae3Df33F705515F3
NEXT_PUBLIC_PROGRESS_TRACKER_ADDRESS_SEPOLIA=0xE77F7e804934d01BF1613eE74Fd6BB976042a2a2

# Base Mainnet Addresses
NEXT_PUBLIC_AVENTURER_NFT_ADDRESS=
NEXT_PUBLIC_DUNGEON_GAME_ADDRESS=
NEXT_PUBLIC_FEE_DISTRIBUTOR_ADDRESS=
NEXT_PUBLIC_REWARDS_POOL_ADDRESS=
NEXT_PUBLIC_PROGRESS_TRACKER_ADDRESS=

# ===========================================
# FRONTEND CONFIGURATION
# ===========================================

# WalletConnect Project ID
# Get from: https://cloud.walletconnect.com/
NEXT_PUBLIC_WC_PROJECT_ID=your_walletconnect_project_id_here

# Environment (development | production)
NODE_ENV=development

# Network to use (baseSepolia | base)
NEXT_PUBLIC_NETWORK=baseSepolia

# Enable development mode (skip blockchain for testing)
NEXT_PUBLIC_DEV_MODE=false

# ===========================================
# ANALYTICS & MONITORING (Optional)
# ===========================================

# Google Analytics ID
NEXT_PUBLIC_GA_ID=

# Sentry DSN (error tracking)
NEXT_PUBLIC_SENTRY_DSN=

# ===========================================
# IPFS (Optional - for NFT metadata)
# ===========================================

# Pinata API Keys (for IPFS uploads)
PINATA_API_KEY=
PINATA_API_SECRET=

# NFT Storage API Token
NFT_STORAGE_API_KEY=

# ===========================================
# TESTING
# ===========================================

# Enable gas reporting in tests
REPORT_GAS=true

# Coinmarketcap API Key (for gas price in USD)
COINMARKETCAP_API_KEY=

# ===========================================
# NOTES
# ===========================================

# 1. Get Base Sepolia testnet ETH from: https://www.coinbase.com/faucets/base-ethereum-goerli-faucet
# 2. Get BaseScan API key from: https://basescan.org/myapikey
# 3. Get WalletConnect Project ID from: https://cloud.walletconnect.com/
# 4. Never commit .env file to git
# 5. Update contract addresses after deployment
